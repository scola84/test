  "engines": {
    "node": ">=14"
  },
  "exports": "./dist/js/lib.esm.js",
  "files": [
    "./dist/",
    "./types/"
  ],
  "license": "MIT",
  "name": "@scola/lib",
  "private": true,
  "repository": "github:scola84/lib",
  "scripts": {
    "build:dev": "rimraf ./{dist,types} && rollup -cmw",
    "build:pub": "rimraf ./{dist,types} && rollup -c && gzip ./dist/**/*.{css,js}",
    "find:all": "yarn -s find:css ; yarn -s find:tsc",
    "find:css": "yarn -s find:git | grep -E '\\.css$'",
    "find:git": "git diff --staged --diff-filter=ACMR --name-only",
    "find:tsc": "yarn -s find:git | grep -E '\\.(js|ts)$'",
    "lint:dev": "yarn lint:dev:css && yarn lint:dev:tsc && git add $(yarn -s find:all)",
    "lint:dev:css": "if [ $(yarn -s find:css | wc -c) -gt 0 ]; then prettier --write $(yarn -s find:css); fi",
    "lint:dev:tsc": "tsc && eslint --fix $(yarn -s find:tsc)",
    "lint:pub": "yarn lint:pub:css && yarn lint:pub:tsc",
    "lint:pub:css": "if [ $(find ./src -name '*.css' | wc -c) -gt 0 ]; then prettier --check ./src/**/*.css; fi",
    "lint:pub:tsc": "tsc && eslint .",
    "start:dev": "onchange -i -k ./src -- node --experimental-loader ts-node/esm.mjs --experimental-specifier-resolution=node ${NODE_SCRIPT}",
    "start:pub": "node --experimental-loader ts-node/esm.mjs --experimental-specifier-resolution=node ${NODE_SCRIPT}",
    "test:dev": "if [ $(yarn -s find:tsc | wc -c) -gt 0 ]; then jest --bail --findRelatedTests $(yarn -s find:tsc); fi",
    "test:pub": "jest --bail"
  },
  "type": "module",
  "types": "./types/esm.d.ts",
  "version": "0.0.0"
}
